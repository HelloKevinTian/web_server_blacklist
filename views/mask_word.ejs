<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="/miniui/themes/default/miniui.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>
    <link href="stylesheets/bootstrap-responsive.css" rel="stylesheet">
</head>
<body>
<h4>添加关键字</h4>
<input id="tb" class="mini-textbox" emptyText="请输入关键字"/>
<a class="mini-button " plain="true" iconCls="icon-add" onclick="onAdd">添加</a>
<a class="mini-button " plain="true" iconCls="icon-add" onclick="onDel">删除</a>
<textarea id="log" class="mini-textarea" class="auto_textarea"  style="width:1605px;height:50px;"  value="ok"  emptyText="{config}"></textarea>
<script type="text/javascript">
    function onAdd(e) {
        var keyword = mini.get("tb").getValue();
        $.ajax({
            url : "/mask_word",
            dataType: 'json',
            cache: false,
            type : "post",
            data : {
                type:"add",
                keyword:keyword
            },
            success : function(result) {
                if(result){
                    switch (result.code)
                    {
                        case 200:
                            mini.get("log").setValue("add ok");
                            break;
                    }
                }else{

                }
            }
        });
    }
    function onDel(e) {
        var keyword = mini.get("tb").getValue();
        $.ajax({
            url : "/mask_word",
            dataType: 'json',
            cache: false,
            type : "post",
            data : {
                type:"del",
                keyword:keyword
            },
            success : function(result) {
                if(result){
                    switch (result.code)
                    {
                        case 200:
                            mini.get("log").setValue("del ok");
                            break;
                    }
                }else{

                }
            }
        });
    }
</script>
</body>

<script src="/javascripts/jquery.js"></script>
<script src="/javascripts/util.js" type="text/javascript"></script>
<script src="/miniui/miniui.js" type="text/javascript"></script>
</html>